#include <bits/stdc++.h>
#define ll long long
using namespace std;

int main(){
    ll t;
    cin>>t;
    while(t--){
     int n,a,b,m;
     cin>>n;
     a=n,b=n-1;
     cout<<2<<endl;
     int i=1;
     while(i<n){
        cout<<a<<" "<<b<<endl;
        a=(a+b+1)/2;
        i++;
        b--;
     }
}
}
