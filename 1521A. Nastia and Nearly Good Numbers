#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t,n;
    cin>>t;
    while(t--)
    {
      long long  int a,b,r,x,y,z;
       cin>>a>>b;
       if(b==1) cout<<"NO"<<endl;
       else{
        cout<<"YES"<<endl;

       z=a*b;
       x=a;
       y=z-x;
       if(x==y){
        cout<<x<<" "<<2*z-x<<" "<<2*z<<endl;

       }
        else{
            cout<<x<<" "<<y<<" "<<z<<endl;
        }

    }
    }

}
