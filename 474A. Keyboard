#include<bits/stdc++.h>
using namespace std;
int main()
{
 string s=("qwertyuiopasdfghjkl;zxcvbnm,./");
 string s1,s2;
 while(cin>>s1>>s2){
    if(s1=="R"){
        for(int i=0;i<s2.size();i++){
            for(int j=0;j<34;j++){
                if(s2[i]==s[j]){
                    cout<<s[j-1];
                    break;
                }
            }
        }

    }

     else if(s1=="L"){
        for(int i=0;i<s2.size();i++){
            for(int j=0;j<34;j++){
                if(s2[i]==s[j]){
                    cout<<s[j+1];
                    break;
                }
            }
        }
    }
    cout<<endl;
 }
}




